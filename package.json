{
  "name": "cloud-architect",
  "version": "1.0.0",
  "description": "Cloud Architecture Designer",
  "author": "Your Name",
  "main": "electron/main/index.js",
  "scripts": {
    "dev": "npx next dev",
    "build": "npx next build",
    "start": "npx next start",
    "clean": "rimraf .next out dist",
    "dist": "npm run clean && npm run build && electron-builder"
  },
  "build": {
    "appId": "com.yourname.cloudarchitect",
    "productName": "Cloud Architecture Designer",
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraMetadata": {
      "main": "electron/main/index.js"
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "mongodb": "^6.14.1",
    "next": "^15.2.0"
  }
}
